
<div id="env_page">
    <div class="form-group">
        <label for="oat" class="col-xs-3 col-sm-2 control-label">OAT</label>
        <div class="col-xs-9 col-sm-6">
            <input type="text" name ="temp" class="form-control" id="oat" placeholder="Type in OAT">
        </div>
    </div>

    <div class="form-group">
        <label for="wind" class="col-xs-3 col-sm-2 control-label">WIND</label>
        <div class="col-xs-9 col-sm-6">
            <input type="text" name ="windmag" class="form-control" id="windspeed" placeholder="Type in windspeed">
        </div>
    </div>

    <div class="form-group">
        <label for="WC" class="sr-only">W/C</label>
        <div class="col-xs-9 col-sm-6 col-xs-offset-3 col-sm-offset-2">
            <input type="text" name="winddir" class="form-control" id="WC" placeholder="Type in W/C">
        </div>
    </div>

    <div class="form-group">
        <label for="QNH" class="col-xs-3 col-sm-2 control-label">QNH</label>
        <div class="col-xs-9 col-sm-6">
            <input type="text" name="QNH" class="form-control" id="QNH" placeholder="Type in QNH">
        </div>
    </div>

    <div class="form-group">
        <label for="runway-conditions" class="col-xs-3 col-sm-2 control-label">RWY COND</label>
        <div class="col-xs-9 col-sm-6 styled-select">
            <select class="form-control" name="surface" id="runway-conditions" placeholder="Click here for runway conditions">
                <option>Click here to select runway conditions</option>
                <option>Dry</option>
                <option>Wet</option>
            </select>
        </div>
    </div>

</div>